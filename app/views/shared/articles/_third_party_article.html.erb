<div class="resource_article">
  <% obj.assets.each do |asset| %>
    <%= link_to image_tag(asset.attachment.url(:thumb), :alt => obj.title), obj.third_party_url, :target => "_blank" %>
  <% end %>
  <div class="resource_article_wrapper">        
    <h3><%= link_to "#{ obj.title}", obj.third_party_url, :target => "_blank"  %></h3>
    <%= truncate(obj.description, :length => 120) %>
  </div>
</div>